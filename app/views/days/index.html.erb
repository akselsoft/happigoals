<p id="notice"><%= notice %></p>
<h1>Days</h1>



  <tbody>
    <% @days.each do |day| %>
    <div class="box">
      On <%= day.day %> I wanted to <%= day.goal %>
      <%= image_tag day.image.url(:medium) %>
        <%= day.day %>
        <%= day.goal %>
        <%= day.good %>
        <%= day.bad %>
        <%= day.actions %>
        <%= day.regret %>
        <%= link_to 'Show', day %>&nbsp;
        <% if day.user == current_user %>
        <%= link_to 'Edit', edit_day_path(day) %>&nbsp;
        <%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %>

        <% end %>
        <%= day.user.email if day.user %>
      </div>
    <% end %>


<br>
<% if user_signed_in? %>
<%= link_to 'New Day', new_day_path %>
<% end %>
